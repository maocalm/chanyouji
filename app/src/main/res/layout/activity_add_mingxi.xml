<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyj.chanyouji.AddMingxiActivity">
    <RelativeLayout
        android:id="@+id/id_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1e90ff">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/icon_day_before_arrow"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title"
            android:text="添加消费记录"
            android:layout_toRightOf="@id/back"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/add"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/chose_photolist_uncheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@id/id_top"
        android:hint="输入消费金额"
        android:textColorHint="#ccc"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="right|center_vertical"
        />
        <RadioGroup
            android:id="@+id/rg"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <RadioButton
                    android:id="@+id/bt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableTop="@drawable/selector_qita"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="其他"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />
                <RadioButton
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_marginTop="-48dp"
                    android:drawableTop="@drawable/selector_jiaotong"
                    android:gravity="center"
                    android:layout_marginLeft="130dp"
                    android:drawablePadding="5dp"
                    android:text="交通"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />
                <RadioButton
                    android:id="@+id/bt3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="-54dp"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_canyin"
                    android:gravity="center"
                    android:text="餐饮"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />
                <RadioButton
                    android:id="@+id/bt4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_zhu"
                    android:gravity="center"
                    android:text="住宿"
                    android:layout_marginTop="-53dp"
                    android:layout_marginLeft="310dp"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />

                <RadioButton
                    android:id="@+id/bt5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:layout_marginLeft="40dp"
                    android:drawableTop="@drawable/selector_men"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="门票"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />
                <RadioButton
                    android:id="@+id/bt6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="130dp"
                    android:button="@null"
                    android:layout_marginTop="-53dp"
                    android:drawableTop="@drawable/selector_shopping"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:text="购物"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />
                <RadioButton
                    android:id="@+id/bt7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:drawableTop="@drawable/selector_yule"
                    android:gravity="center"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="-53dp"
                    android:drawablePadding="5dp"
                    android:text="娱乐"
                    android:textSize="12sp"
                    android:textColor="@drawable/selector_color"
                    />
        </RadioGroup>
    <TextView
        android:id="@+id/danwei"
        android:layout_below="@id/rg"
        android:text="货币单位"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/line"
        android:layout_below="@id/danwei"
        android:background="#ccc"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Spinner
        android:id="@+id/sp_danwei"
        android:text="中文"
        android:layout_below="@id/rg"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/text1"
        android:layout_below="@id/line"
        android:text="消费明细"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/edit_xiaofei"
        android:layout_below="@id/line"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:hint="未填写"
        android:textColorHint="#ccc"
        android:textSize="18sp"
        android:paddingLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
