<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#eee">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/country"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/arrow"
                    android:layout_toRightOf="@+id/country"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:layout_below="@+id/rl"
                android:background="#ccc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/ling"
                android:text="。"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/rl"
                android:layout_toLeftOf="@+id/line"
                android:layout_marginRight="10dp"
                android:textColor="#6495ed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/c"
                android:text="C"
                android:textSize="20sp"
                android:layout_below="@+id/rl"
                android:layout_toLeftOf="@+id/line"
                android:textColor="#6495ed"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/start_temp"
                android:textColor="#6495ed"
                android:textSize="55sp"
                android:layout_below="@+id/rl"
                android:layout_toLeftOf="@+id/ling"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/end_temp"
                android:textSize="55sp"
                android:layout_below="@+id/rl"
                android:layout_toRightOf="@+id/line"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:textColor="#ff4500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/ling1"
                android:text="。"
                android:textSize="20sp"
                android:layout_below="@+id/rl"
                android:layout_toRightOf="@+id/end_temp"
                android:layout_marginTop="5dp"
                android:textColor="#ff4500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/c1"
                android:text="C"
                android:textSize="20sp"
                android:layout_below="@+id/rl"
                android:layout_toRightOf="@+id/ling1"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="20dp"
                android:textColor="#ff4500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/time"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textColor="#555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/top"
            android:layout_marginTop="60dp"
            >
            <TextView
                android:id="@+id/translate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="语音翻译"
                android:textColor="@drawable/des_text_color"
                android:drawableTop="@drawable/translate"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/account"
                android:text="旅行记账"
                android:textColor="@drawable/des_text_color"
                />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ta"
            android:layout_marginTop="50dp"
            >
            <TextView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="旅行地图"
                android:textColor="@drawable/des_text_color"
                android:drawableTop="@drawable/map"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@drawable/money"
                android:text="实时汇率"
                android:textColor="@drawable/des_text_color"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/toolbox_empty_flag"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择下一次旅行的期许之地"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/openTool"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="开启工具箱"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/tool"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>
</RelativeLayout>