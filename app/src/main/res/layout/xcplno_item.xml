<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_trips_timeline_transport"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第一站： 关西国际机场"
                android:textColor="#0f0f0f"/>

            <ImageView
                android:id="@+id/in"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="12dp"
                android:layout_marginRight="10dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_toolbox_destination_arrow"/>

        </RelativeLayout>


        <ImageView
            android:layout_below="@id/rl"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>


    <TextView
        android:layout_below="@id/rl"
        android:padding="10dp"
        android:id="@+id/tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0f0f0f"
        android:text="#国内到大阪#  从国内前往大阪的航班都降落在关西国际机场，从机场前往大阪市区可搭乘：南海电铁空港急行往返难波站（890日元、约42分钟）或关空机场巴士往返难波站（1,000日元、50分）等多种方式。"/>





</LinearLayout>