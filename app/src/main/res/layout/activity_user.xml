<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cyj.chanyouji.UserActivity">
    <RelativeLayout
        android:id="@+id/id_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1e90ff">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/icon_day_before_arrow"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title"
            android:text="日本游记"
            android:layout_toRightOf="@id/back"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/header"
        android:layout_below="@id/id_top"
        android:layout_width="match_parent"
        android:layout_height="135dp">
        <ImageView
            android:id="@+id/image"
            android:layout_margin="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/image"
            android:textSize="18sp"
            android:text="漂流日本"
            android:layout_marginTop="20dp"
            android:textColor="#555"
            android:layout_width="wrap_content"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/trips_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/image"
            android:layout_marginTop="5dp"
            />
        <ImageView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:layout_alignTop="@+id/name"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/guanzhu"
            android:layout_below="@id/image"
            android:text="关注她"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/email"
            android:layout_below="@id/image"
            android:text="私信"
            android:layout_toRightOf="@id/guanzhu"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/id_tablayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            app:tabIndicatorColor="#1e90ff"
            app:tabIndicatorHeight="4dp"
            app:tabTextColor="#000000"
            app:tabSelectedTextColor="#1e90ff">
        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/id_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_tablayout">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>
</RelativeLayout>
