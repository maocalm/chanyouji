<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.cyj.chanyouji.AddActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/id_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1e90ff">
            <ImageView
                android:id="@+id/back"
                android:src="@mipmap/icon_day_before_arrow"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/title"
                android:text="旅行记账"
                android:layout_toRightOf="@id/back"
                android:padding="12dp"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/add"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:src="@mipmap/icon_header_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_top"
            android:text="消费总额"
            android:padding="15dp"
            android:textColor="#333"
            android:textSize="15sp"/>
        <View
            android:id="@+id/line"
            android:layout_below="@id/text"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@+id/total_riyuan"
            android:layout_below="@id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="共0.0日元"
            android:layout_marginLeft="2dp"
            android:padding="15dp"/>
        <TextView
            android:id="@+id/total_meiyuan"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/total_riyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="共0.0美元"
            android:padding="5dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/total_ouyuan"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/total_meiyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="共0.0欧元"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/total_renminbi"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/total_ouyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="共0.0人民币"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <View
            android:id="@+id/line1"
            android:layout_below="@id/total_riyuan"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_below="@id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看消费统计"
                android:textColor="#333"
                android:padding="15dp"
                android:layout_marginLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_left_normal"
                android:layout_alignParentRight="true"
                android:padding="15dp"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>
        <View
            android:id="@+id/line2"
            android:layout_below="@id/rl"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_below="@id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费明细"
                android:layout_marginTop="3dp"
                android:padding="15dp"
                android:textColor="#333"
                android:textSize="15sp"/>
            <ImageView
                android:id="@+id/more_mingxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_left_normal"
                android:layout_alignParentRight="true"
                android:padding="15dp"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/line4"
            android:layout_below="@id/rl2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
            <com.cyj.chanyouji.customview.ChildListView
                android:id="@+id/miangxi"
                android:orientation="vertical"
                android:layout_below="@id/line4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/clear"
            android:layout_below="@id/miangxi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:background="#fff"
            android:text="清空消费记录"
            android:textColor="#333"
            android:gravity="center"/>
    </RelativeLayout>
</ScrollView>
