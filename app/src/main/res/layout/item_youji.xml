<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/front_cover_photo_url"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#cccccc"
        android:layout_margin="1dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#44555555"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="【泰国的小清新玩法】清迈·拜县行摄记"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/best"
        android:layout_alignParentLeft="true"
        />
    <ImageView
        android:id="@+id/best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/best"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/date_days_photos_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1025.02.20/7天,74图"
        android:textColor="#fff"
        android:layout_below="@+id/name"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/best"
        />

    <RelativeLayout
        android:id="@+id/imagerl"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/yuanjiao"
        android:layout_margin="12dp"
        android:padding="2dp"
        android:layout_alignBottom="@+id/front_cover_photo_url"
        >
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
</RelativeLayout>